<html>
    <head>
        <link rel="stylesheet" href="/css/style.css">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">   
    </head>
    <body>
        <div class="container-fluid px-1 px-sm-3 py-5 mx-auto">
            <div class="row d-flex justify-content-center">
                <div class="row card0">
                    <div class="card1 col-lg-8 col-md-7"> <small></small>
                        <div class="text-center"> <img class="image mt-5" src="https://i.imgur.com/M8VyA2h.png"> </div>
                        <div class="row px-3 mt-3 mb-3">
                            <h1 class="large-font mr-3"> <%=stemp%></h1>
                            <div class="d-flex flex-column mr-3">
                                <h2 class="mt-3 mb-0"><%=place%></h2> <small><%=time%></small>
                            </div>
                            <div class="d-flex flex-column text-center">
                                <h3 class="fa  mt-4"><img style="border-radius: 100px; width: 20px;" class="a" src="<%=icon%>"></h3> <small><%=des%></small>
                            </div>
                        </div>
                    </div>
                    <div class="card2 col-lg-4 col-md-5">
                        <form action="/" method="POST">
                        <div class="row px-3"><input type="text" name="location" placeholder="Another location" class="mb-5">
                            <div class="fa"><button style="width: 60px; border-width: 0px; padding-bottom: 24px;" type="submit" class="fa fa-search mb-5 mr-0 text-center" ><input type="submit" value="submit" hidden="hidden"></button></div>

                        </form>
                        </div>
                        <div class="mr-5">
                            <form action="/c" method="POST">
                            <button type="submit" name="b" value="Birmingham" style="background-color:transparent; border-width: 0px;"><p style="margin-bottom: 10px;" class="light-text suggestion">Birmingham</p></button><br>
                            <button type="submit" name="m" value="Manchester" style="background-color:transparent; border-width: 0px;"><p style="margin-bottom: 10px;" class="light-text suggestion">Manchester</p></button><br>
                            <button type="submit" name="n" value="New York" style="background-color:transparent; border-width: 0px;"><p style="margin-bottom: 10px;" class="light-text suggestion">New York</p></button><br>
                            <button type="submit" name="c" value="California" style="background-color:transparent; border-width: 0px;"><p style="margin-bottom: 0px;" class="light-text suggestion">California</p></button>
                        </form>
                            <div class="line my-5"></div>
                            <p>Weather Details</p>
                            <div class="row px-3">
                                <p class="light-text">Humidity</p>
                                <p class="ml-auto"><%=humidity%> %</p>
                            </div>
                            <div class="row px-3">
                                <p class="light-text">Wind</p>
                                <p class="ml-auto"><%=wind%> km/h</p>
                            </div>
                            <div class="row px-3">
                                <p class="light-text">Visiblity</p>
                                <p class="ml-auto"><%=visiblity%> m</p>
                            </div>
                            <div class="row px-3">
                                <p class="light-text">Pressure</p>
                                <p class="ml-auto"><%=pressure%> mbar</p>
                            </div>
                            <div class="line mt-3"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>